@using RealEstateManagement.Models.ViewModels;

@model ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <h1>Contact Us</h1>
    <p>Please feel free to reach out to us with any questions, comments, or inquiries. We'll get back to you as soon as possible.</p>
    @using (Html.BeginForm("SubmitContactForm", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Message)
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your Message", rows = "5" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

    <h2>Our Address</h2>
    <address>
        123 Main Street<br>
        Anytown, USA<br>
        <strong>Phone:</strong> (123) 456-7890<br>
        <strong>Email:</strong> <a href="mailto:info@realestatemanagement.com">info@realestatemanagement.com</a>
    </address>
</div>