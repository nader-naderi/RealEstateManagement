@model RealEstateManagement.Models.Entities.Property

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Delete Property</h2>
                    <p class="card-text">Are you sure you want to delete this property?</p>
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-lg btn-danger btn-block mt-4">Delete</button>
                        <a asp-action="Index" class="btn btn-lg btn-secondary btn-block mt-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
